{
  "private": true,
  "name": "recipes-api",
  "version": "0.0.0",
  "description": "Recipes RESTful API",
  "main": "src/index.js",
  "repository": "git@github.com:fknussel/recipes-api.git",
  "license": "MIT",
  "scripts": {
    "eslint": "eslint -f stylish --ext .js ./src",
    "nodemon": "NODE_ENV=staging nodemon --inspect ./src/index.js",
    "watch": "npm-run-all eslint nodemon",
    "stop": "forever stop ./src/index.js",
    "start": "NODE_ENV=production forever start ./src/index.js"
  },
  "dependencies": {
    "assign-deep": "^1.0.1",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "eslint": "^6.8.0",
    "express": "^4.17.1",
    "forever": "^2.0.0",
    "hash-util": "^0.1.0",
    "husky": "^4.2.1",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.15",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "pg": "^7.18.1",
    "prettier": "^1.19.1",
    "sequelize": "^5.21.4"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
